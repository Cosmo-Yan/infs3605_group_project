<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/screenName3"
                android:layout_width="194dp"
                android:layout_height="29dp"
                android:text="Record Details"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reqField3"
                android:layout_width="194dp"
                android:layout_height="29dp"
                android:text="* Indicates a required field"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/eventName"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:hint="Enter name of event name*"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/orgName"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:hint="Enter name of organiser*"
                android:inputType="textPersonName"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/events_spinner"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_border"
                android:contentDescription="Choose the event to record*"
                android:hint="Pick an event*" />

            <Spinner
                android:id="@+id/country_spinner"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_border"
                android:contentDescription="Choose a country that fits the event*"
                android:hint="Choose a country*" />

            <EditText
                android:id="@+id/location"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:hint="Location*"
                android:inputType="textMultiLine|textPersonName"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/startDate"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:hint="Enter start date*"
                android:inputType="textPersonName"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/furtherDetails"
                android:layout_width="320dp"
                android:layout_height="150dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:hint="Enter any further details"
                android:inputType="textMultiLine"
                android:maxLength="500"
                android:textSize="14sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/uploadImage"
                    android:layout_width="125dp"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text_border"
                    android:ems="10"
                    android:hint="Upload image "
                    android:inputType="none"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/uploadIcon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <ImageView
                    android:id="@+id/uploadIcon"
                    android:background="@drawable/image_upload_icon"
                    android:layout_width="254dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="2dp"
                    app:layout_constraintBottom_toBottomOf="@+id/uploadImage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/uploadImage"
                    app:layout_constraintTop_toTopOf="@+id/uploadImage"
                    app:srcCompat="@android:drawable/ic_menu_upload" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2">

        <Button
            android:id="@+id/saveButton"
            android:layout_width="176dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="Save"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/nextButton"
            android:layout_width="177dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>