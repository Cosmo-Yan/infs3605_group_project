<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.INFS3605_group_project" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. black on white-->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Tertiary colour being UNSW colour black on yellow-->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:itemBackground">@color/black</item>
        <item name="android:itemTextAppearance">?attr/colorPrimaryVariant</item>
        <item name="android:actionMenuTextColor">@color/black</item>

        <!-- Customize your theme here. -->

    </style>
    <style name="Theme.INFS3605_group_project.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.INFS3605_group_project.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.INFS3605_group_project.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>